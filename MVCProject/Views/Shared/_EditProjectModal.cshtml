@model MVCProject.Models.Project

<div class="modal-overlay">
    <div class="modal">
        <div class="modal-header">
            <h2>Edit Project - @Model.ProjectName</h2>
            <button class="close-btn" onclick="closeModal()">×</button>
        </div>

        <form asp-action="Edit" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label>Project Name</label>
                <input name="ProjectName" class="form-control" value="@Model.ProjectName" required />
            </div>
            <div class="form-group">
                <label>Client Name</label>
                <input name="ClientName" class="form-control" value="@Model.ClientName" required />
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea name="Description" class="form-control" required>@Model.Description</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
